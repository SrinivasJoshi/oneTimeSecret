# For docker-compose.yml

# PostgreSQL Settings (use strong passwords in production!)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=onetimesecretdb

# Backend Settings
NODE_ENV=production
PORT=9000 # Matches internal backend port

# Nginx Environment (local, production)
NGINX_ENVIRONMENT=local

# vite url remove for local
VITE_API_URL=/api 


# Adjust rate limits for production if desired
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=50

# Nginx Port (Optional, defaults to 80 if not set)
# NGINX_PORT=8080